<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="manipulatorMobileApp.Views.ModeSelectionPage"
             BackgroundColor="Black"
             Title="Choise">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="Lavender"
                         Padding="10,10,10,10">
                <Button Text="OBJECTS LIST"
                        CornerRadius="10"
                        x:Name="objectListBtn"
                        Clicked="ObjectListBtn_Clicked"/>
            </StackLayout>
            <StackLayout BackgroundColor="Lavender"
                         Padding="10,10,10,10">
                <Button Text="POSSIBLE OBJECTS"
                        CornerRadius="10"
                        x:Name="possibleObjectsBtn"
                        Clicked="PossibleObjectsBtn_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>